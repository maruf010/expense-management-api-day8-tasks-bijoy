  "sampleRequests": {
    "createCategory": {
      "method": "POST",
      "endpoint": "/categories",
      "headers": {
        "Authorization": "Bearer YOUR_JWT_TOKEN",
        "Content-Type": "application/json"
      },
      "body": {
        "name": "Food & Dining",
        "slug": "food-dining",
        "color": "#FF6B6B"
      }
    },
    "createExpense": {
      "method": "POST",
      "endpoint": "/expenses",
      "headers": {
        "Authorization": "Bearer YOUR_JWT_TOKEN",
        "Content-Type": "application/json"
      },
      "body": {
        "title": "Lunch at Restaurant",
        "amount": 450,
        "categoryId": "CATEGORY_ID_HERE",
        "date": "2025-10-15",
        "paymentMethod": "cash",
        "tags": ["lunch", "restaurant"],
        "notes": "Lunch with team"
      }
    },
    "createBudget": {
      "method": "POST",
      "endpoint": "/budgets",
      "headers": {
        "Authorization": "Bearer YOUR_JWT_TOKEN",
        "Content-Type": "application/json"
      },
      "body": {
        "month": "2025-10",
        "categoryId": "CATEGORY_ID_HERE",
        "limit": 15000
      }
    },
    "createRecurringExpense": {
      "method": "POST",
      "endpoint": "/recurring-expenses",
      "headers": {
        "Authorization": "Bearer YOUR_JWT_TOKEN",
        "Content-Type": "application/json"
      },
      "body": {
        "title": "Netflix Subscription",
        "amount": 800,
        "categoryId": "CATEGORY_ID_HERE",
        "cadence": "monthly",
        "startDate": "2025-10-01"
      }
    },
    "getExpenses": {
      "method": "GET",
      "endpoint": "/expenses?month=2025-10&categoryId=CATEGORY_ID",
      "headers": {
        "Authorization": "Bearer YOUR_JWT_TOKEN"
      }
    },
    "getReportSummary": {
      "method": "GET",
      "endpoint": "/reports/summary?month=2025-10",
      "headers": {
        "Authorization": "Bearer YOUR_JWT_TOKEN"
      }
    },
    "uploadReceipt": {
      "method": "POST",
      "endpoint": "/uploads/receipt",
      "headers": {
        "Authorization": "Bearer YOUR_JWT_TOKEN",
        "Content-Type": "multipart/form-data"
      },
      "body": {
        "file": "SELECT_IMAGE_FILE"
      }
    }
  },
